@model IEnumerable<SchoolManagement.MVC.Data.ClassesDatum>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @item.Course.Code - @item.Course.Name 
                @* @Html.DisplayFor(modelItem => item.Course.Name) *@
            </td>
            <td>
                @item.Lecturer.FisrtName @item.Lecturer.LastName
                @* @Html.DisplayFor(modelItem => item.Lecturer.FisrtName) *@
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                <a asp-action="ManageEnrollments" class="btn btn-success" asp-route-id="@item.Id">ManageEnrollments Enrollments</a>
            </td>
        </tr>
}
    </tbody>
</table>
